{{#if showCommentForm}}
<h3>Add new comment</h3>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="text">Enter Comment</label>
      {{input value=text id="text"}}
    </div>
    <button {{action 'saveComment'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'showCommentForm'}}>New Comment</button>
{{/if}}
