{{#if addPostForm}}
<h4>Add new Post</h4>
<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="text">Text</label>
    {{input value=text id="text"}}
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    {{input value=image id="image"}}
  </div>
  <button {{action 'save' post}}>Save</button>
</form>
{{else}}
<button {{action 'addPostForm'}}>Add new Post</button>
{{/if}}
